
pipeline {
    agent {
        kubernetes {
            yamlFile 'pipeline/dind-pod.yaml'
        }
    }
    stages {
        def app

        stage('Clone repository') {
            steps {
                container('docker') {
                    checkout scm
                }   
            }
        }

        stage('Build image') {
            steps {
                container('docker') {
                    app = docker.build("gbt55/discord-bot-music", "./app")
                }   
            }
        }

    // stage('Test image') {


    //     app.inside {
    //         sh 'echo "Tests passed"'
    //     }
    // }

        stage('Push image') {
            steps {
                    container('docker') {
                        docker.withRegistry('https://registry.hub.docker.com', 'dockerhub') {
                            app.push("v1.0.${env.BUILD_NUMBER}")
                            }
                    }   
                }
        }

        stage('Trigger ManifestUpdate') {
            steps {
                echo "triggering updatemanifestjob"
                    build job: 'pipeline-updatemanifest-discord-bot-music', parameters: [string(name: 'DOCKERTAG', value: env.BUILD_NUMBER)]
            } 
        }
    }
}
